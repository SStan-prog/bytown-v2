{
  "Main": {
    "uid": {
      "type": "UID",
      "config": {
        "label": "Homepage"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": null,
        "choices": {
          "bible_verse": {
            "type": "Slice",
            "fieldset": "Bible Verse",
            "description": "Bible verse ",
            "icon": "library_books",
            "display": "list",
            "non-repeat": {
              "verse": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Verse",
                  "placeholder": "For God so loved the world...."
                }
              },
              "verse_location": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Verse location",
                  "placeholder": "John: 3:16"
                }
              }
            },
            "repeat": {}
          },
          "call_to_action": {
            "type": "Slice",
            "fieldset": "Call to action",
            "description": "Call to action section for midpage or end of page",
            "icon": "arrow_forward",
            "display": "list",
            "non-repeat": {
              "icon_image": {
                "type": "Image",
                "config": {
                  "constraint": {},
                  "thumbnails": [],
                  "label": "Icon Image"
                }
              },
              "paragraph": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,o-list-item",
                  "label": "Paragraph"
                }
              }
            },
            "repeat": {
              "button_link": {
                "type": "Link",
                "config": {
                  "label": "Button Link",
                  "select": null
                }
              },
              "button_label": {
                "type": "Text",
                "config": {
                  "label": "Button Label",
                  "placeholder": "Text for button"
                }
              }
            }
          },
          "content_block": {
            "type": "Slice",
            "fieldset": "Content Block",
            "description": "Block about the church or an event ",
            "icon": "border_color",
            "display": "grid",
            "non-repeat": {
              "block_id": {
                "type": "StructuredText",
                "config": {
                  "multi": "rtl",
                  "label": "block Id"
                }
              },
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {},
                  "thumbnails": [],
                  "label": "Image"
                }
              },
              "title": {
                "type": "StructuredText",
                "config": {
                  "single": "heading2",
                  "label": "Title",
                  "placeholder": "Title or Event Name"
                }
              },
              "subtitle": {
                "type": "StructuredText",
                "config": {
                  "multi": "heading3,strong",
                  "label": "Subtitle",
                  "placeholder": "Optional subtitle or event date/time"
                }
              },
              "description": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,strong,em,hyperlink",
                  "allowTargetBlank": true,
                  "label": "Description",
                  "placeholder": "Text or event details"
                }
              },
              "button_link": {
                "type": "Link",
                "config": {
                  "allowTargetBlank": true,
                  "label": "Button Link",
                  "placeholder": "Optional button link",
                  "select": null
                }
              },
              "button_label": {
                "type": "Text",
                "config": {
                  "label": "Button Label",
                  "placeholder": "Optional button text"
                }
              },
              "image_placement": {
                "type": "Boolean",
                "config": {
                  "placeholder_false": "Left",
                  "placeholder_true": "Right",
                  "default_value": false,
                  "label": "Image placement"
                }
              },
              "image_width": {
                "type": "Select",
                "config": {
                  "options": ["short", "half-size", "wide"],
                  "default_value": "short",
                  "label": "Image Width"
                }
              },
              "text_alignment": {
                "type": "Select",
                "config": {
                  "options": ["left", "center", "right"],
                  "default_value": "left",
                  "label": "Text Alignment"
                }
              }
            },
            "repeat": {}
          },
          "home_header": {
            "type": "Slice",
            "fieldset": "Home Header",
            "description": "Header for homepage",
            "icon": "border_color",
            "display": "list",
            "non-repeat": {
              "heading": {
                "type": "StructuredText",
                "config": {
                  "single": "heading1",
                  "label": "Heading"
                }
              },
              "body_text": {
                "type": "StructuredText",
                "config": {
                  "multi": "rtl",
                  "label": "Body Text"
                }
              },
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {},
                  "thumbnails": [],
                  "label": "image"
                }
              }
            },
            "repeat": {
              "button_link": {
                "type": "Link",
                "config": {
                  "label": "button link",
                  "select": null
                }
              },
              "button_label": {
                "type": "Text",
                "config": {
                  "label": "button label"
                }
              }
            }
          },
          "seo": {
            "type": "Slice",
            "fieldset": "SEO",
            "description": "Add page title and meta description",
            "icon": "computer",
            "display": "list",
            "non-repeat": {
              "page_title": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Page title"
                }
              },
              "meta_description": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Meta description"
                }
              }
            },
            "repeat": {}
          },
          "newsletter_signup": {
            "type": "Slice",
            "fieldset": "Newsletter Signup",
            "description": "Newsletter sign up form",
            "icon": "email",
            "display": "list",
            "non-repeat": {
              "heading": {
                "type": "StructuredText",
                "config": {
                  "single": "heading2",
                  "label": "Heading"
                }
              },
              "body_text": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph",
                  "label": "body text"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
  }
}
