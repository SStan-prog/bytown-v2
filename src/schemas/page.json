    "title": {
      "type": "StructuredText",
      "config": {
        "single": "heading1",
        "label": "Title",
        "placeholder": "Enter Title Here"
      }
    },
    "body": {
      "type": "Slices",
      "fieldset": "Slice zone",
      "config": {
        "labels": {},
        "choices": {
          "call_to_action": {
            "type": "Slice",
            "fieldset": "Call to action",
            "description": "Call to action section for midpage or end of page",
            "icon": "arrow_forward",
            "display": "list",
            "non-repeat": {
              "icon_image": {
                "type": "Image",
                "config": {
                  "constraint": {},
                  "thumbnails": [],
                  "label": "Icon Image"
                }
              },
              "paragraph": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,preformatted,heading1,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,o-list-item",
                  "label": "Paragraph"
                }
              }
            },
            "repeat": {
              "button_link": {
                "type": "Link",
                "config": {
                  "label": "Button Link",
                  "select": null
                }
              },
              "button_label": {
                "type": "Text",
                "config": {
                  "label": "Button Label",
                  "placeholder": "Text for button"
                }
              }
            }
          },
          "bible_verse": {
            "type": "Slice",
            "fieldset": "Bible Verse",
            "description": "Bible verse ",
            "icon": "library_books",
            "display": "list",
            "non-repeat": {
              "verse": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Verse",
                  "placeholder": "For God so loved the world...."
                }
              },
              "verse_location": {
                "type": "StructuredText",
                "config": {
                  "single": "paragraph",
                  "label": "Verse location",
                  "placeholder": "John: 3:16"
                }
              }
            },
            "repeat": {}
          },
          "content_block": {
            "type": "Slice",
            "fieldset": "Content Block",
            "description": "Block about the church or an event ",
            "icon": "border_color",
            "display": "grid",
            "non-repeat": {
              "image": {
                "type": "Image",
                "config": {
                  "constraint": {},
                  "thumbnails": [],
                  "label": "Image"
                }
              },
              "title": {
                "type": "StructuredText",
                "config": {
                  "single": "heading2",
                  "label": "Title",
                  "placeholder": "Title or Event Name"
                }
              },
              "subtitle": {
                "type": "StructuredText",
                "config": {
                  "multi": "heading3,strong",
                  "label": "Subtitle",
                  "placeholder": "Optional subtitle or event date/time"
                }
              },
              "description": {
                "type": "StructuredText",
                "config": {
                  "multi": "paragraph,strong,em,hyperlink",
                  "allowTargetBlank": true,
                  "label": "Description",
                  "placeholder": "Text or event details"
                }
              },
              "button_link": {
                "type": "Link",
                "config": {
                  "allowTargetBlank": true,
                  "label": "Button Link",
                  "placeholder": "Optional button link",
                  "select": null
                }
              },
              "button_label": {
                "type": "Text",
                "config": {
                  "label": "Button Label",
                  "placeholder": "Optional button text"
                }
              },
              "image_placement": {
                "type": "Boolean",
                "config": {
                  "placeholder_false": "Left",
                  "placeholder_true": "Right",
                  "default_value": false,
                  "label": "Image placement"
                }
              }
            },
            "repeat": {}
          }
        }
      }
    }
